<UserControl x:Class="FastReplicate.FastReplicateUi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FastReplicate"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:FastReplicatePlugin/>
    </UserControl.DataContext>
    <Grid>
        <CheckBox Content="Use Fast Replication" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" IsChecked="{Binding UseFastReplication}"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="-277,-54,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
